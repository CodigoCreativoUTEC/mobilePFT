<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mobile"
        tools:targetApi="31">
        <activity
            android:name=".main.Registro"
            android:exported="false" />
        <activity
            android:name=".main.DashboardActivity"
            android:exported="false"/>
        <activity
            android:name=".features.equipos.EquiposActivity"
            android:exported="false"/>
        <activity
            android:name=".features.marca.MarcasActivity"
            android:exported="false"/>
        <activity
            android:name=".features.modelo.ModelosActivity"
            android:exported="false"/>
        <activity
            android:name=".features.tipoEquipo.TipoEquipoActivity"
            android:exported="false"/>
        <activity
            android:name=".features.proveedores.ProveedoresActivity"
            android:exported="false"/>
        <activity android:name=".features.usuarios.UsuariosActivity"
            android:exported="false"/>

        <activity
            android:name=".main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
