<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/white">

    <!-- Icono de acceso denegado -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icerrarsesion"
        android:contentDescription="Icono de acceso denegado"
        android:layout_marginBottom="32dp"
        android:alpha="0.7" />

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/access_denied_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Mensaje -->
    <TextView
        android:id="@+id/tv_access_denied_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/access_denied_message"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:lineSpacingExtra="4dp" />

    <!-- Botón para volver al login -->
    <Button
        android:id="@+id/btn_back_to_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_login"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/circle_bg"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

</LinearLayout> 