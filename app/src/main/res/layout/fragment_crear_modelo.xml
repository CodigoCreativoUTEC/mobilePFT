<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Modelo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Nombre Field -->
    <EditText
        android:id="@+id/tfNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:textSize="18sp"
        android:paddingBottom="16dp" />

    <!-- Spinner Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Marca"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- Spinner Fragment -->
    <fragment
        android:id="@+id/fragmentMarcaPicker"
        android:name="com.codigocreativo.mobile.features.marca.SelectorMarcaFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp" />

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Confirmar"
        android:textColor="#A08052"
        android:textSize="18sp"
        app:cornerRadius="16dp" />
</LinearLayout>